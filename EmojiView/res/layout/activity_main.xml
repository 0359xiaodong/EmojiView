<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:emoji="http://schemas.android.com/apk/res/com.zhaohg.emojiview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="fill">
    
    <com.zhaohg.emojiview.EmojiTextView
        android:id="@+id/emojiTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:textSize="20sp"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
        
        <Button 
            android:id="@+id/emojiButton"
            android:text="@string/emoji_button_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="toggleEmojiView"/>

	    <com.zhaohg.emojiview.EmojiEditText
	        android:id="@+id/emojiEditText"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:hint="@string/emoji_edit_hint"
	        android:ems="10" >
	        <requestFocus />
	    </com.zhaohg.emojiview.EmojiEditText>
	    
    </LinearLayout>
    
    <com.zhaohg.emojiview.EmojiView
        android:id="@+id/emojiView"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        emoji:showIndicatorDots="true"
        emoji:autoHideSoftInput="true"
        emoji:rowNum="4"
        emoji:colNum="8"/>

</LinearLayout>
